@using NelitaBeautyStudio.Models
@using NelitaBeautyStudio.Common
@model IEnumerable<Contact>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Контакти</h2>

@if (Model.Count() == 0)
{
    <h3>Няма въведени контакти</h3>
}
else
{
    <table class="table table-striped table-hover">
        <tbody>
            @foreach (var contact in Model)
            {
                <tr>
                    <td>@contact.Type</td>
                    <td>@contact.Value</td>

                    @if (User.IsInRole(GlobalConstants.AdminRole))
	                {
		                <td><a href="Contacts/Edit/@contact.Id" class="btn btn-warning btn-xs">Редактиране</a></td>
                        <td>@*<a href="Contacts/Delete/@contact.Id" class="btn btn-danger btn-xs" onclick="confirmDelete()">Изтриване</a>*@
                            @using (Html.BeginForm("Delete", "Contacts", new { id = contact.Id }, FormMethod.Post))
                            {
                                @Html.AntiForgeryToken()
                                
                                <input type="submit" value="Изтриване" class="btn btn-danger btn-xs" onclick="confirmDelete()" />
                            }
                        </td>
	                }
                </tr>
            }
        </tbody>
    </table>
    <a href="Contacts/Create" class="btn btn-primary">Добавяне</a>
    
    if (User.IsInRole(GlobalConstants.AdminRole))
    {
        <script src="~/Scripts/confirmDelete.js"></script>
    }
}