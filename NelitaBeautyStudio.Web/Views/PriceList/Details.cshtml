@using NelitaBeautyStudio.Models
@using NelitaBeautyStudio.Common

@model PriceList
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Title</h2>

@if (Model.Services.Count == 0)
{
    <h3>Няма въведени услуги в текущия ценоразпис!</h3>
}
else
{
    <table class="table table-striped table-hover">
        <tbody>
            @foreach (var service in Model.Services)
            {
                <tr>
                    <td>@service.Type</td>
                    <td>@string.Format("{0:N2} лв.", service.Price)</td>
                    @if (User.IsInRole(GlobalConstants.AdminRole))
                    {
                        <td>@Html.ActionLink("Редактиране", "Edit", "Service", new { id = service.Id }, new { @class = "btn btn-warning btn-xs" })</td>
                        <td>
                            @using (Html.BeginForm("Delete", "Service", new { id = service.Id }, FormMethod.Post))
                            {
                                @Html.AntiForgeryToken()

                                <input type="submit" value="Изтриване" class="btn btn-danger btn-xs" onclick="confirmDelete()" />
                            }
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>
}


@if (User.IsInRole(GlobalConstants.AdminRole))
{
    <div class="btn-group">
        <a href="#" class="btn btn-default">Опции</a>
        <a href="#" class="btn btn-default dropdown-toggle" data-toggle="dropdown"><span class="caret"></span></a>
        <ul class="dropdown-menu">
            <li>@Html.ActionLink("Добави нова услуга", "Create", "Service", new { priceListTitle = Model.Title }, null)</li>
            <li>@Html.ActionLink("Смени заглавието на ценоразписа", "Edit", "PriceList", new { id = Model.Id }, null)</li>
            <li>@Html.ActionLink("Изтрий целия ценоразпис", "Delete", "PriceList", new { id = Model.Id }, null)</li>
            <li class="divider"></li>
            <li><a href="#">Separated link</a></li>
        </ul>
    </div>

    <script src="~/Scripts/confirmDelete.js"></script>
}

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/toastr")

<script>
    $(document).ready(function () {
        var message = '@(TempData["message"])'

        if (message) {
            toastr['@(TempData["type"])'](message)
        }
        else { }
    });
</script>